{
	"compilerOptions": {
		"declaration": true,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"lib": [
			"dom",
			"es5",
			"es2015.iterable",
			"es2015.promise",
			"es2015.symbol",
			"es2015.symbol.wellknown"
		],
		"paths": {
			"@dojo/core/*": ["./core/_build/src/*"],
			"@dojo/has/*": ["./has/_build/src/*"],
			"@dojo/i18n/*": ["./i18n/_build/src/*"],
			"@dojo/routing/*": ["./routing/_build/src/*"],
			"@dojo/shim/*": ["./shim/_build/src/*"],
			"@dojo/stores/*": ["./stores/_build/src/*"],
			"@dojo/widget-core/*": ["./widget-core/_build/src/*"]
		},
		"module": "umd",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"outDir": "_build/",
		"removeComments": false,
		"sourceMap": true,
		"strict": true,
		"target": "es5",
		"types": [ "intern" ]
	}
}

